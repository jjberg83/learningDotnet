{
    "version": "0.2.0",
    "configurations": [
        {
            // For å legge til testefunksjonalitet for nytt prosjekt, naviger i terminalen inn til 
            // prosjektets root folder (for eksempel Advanced). Trykk så på CMD + SHIFT + P og søk etter
            // .NET: Generate Assets for Build and Debug. Da vil en ny kodesnippet dannes under, inni
            // sine egne {barteparenteser}. Husk å endre attributten console til  "console": "integratedTerminal".

            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": "Fundamentals",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Fundamentals/bin/Debug/net9.0/Fundamentals.dll",
            "args": ["Working_with_text"], // Må inn og endre denne når jeg vil teste et annen mappe
            "cwd": "${workspaceFolder}/Fundamentals",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": "EdabitChallenges",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/EdabitChallenges/bin/Debug/net9.0/EdabitChallenges.dll",
            "args": [],
            "cwd": "${workspaceFolder}/EdabitChallenges",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": "Intermediate",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/Intermediate/bin/Debug/net9.0/Intermediate.dll",
            "args": ["Polymorphism"],
            "cwd": "${workspaceFolder}/Intermediate",
            // For more information about the 'console' field, see https://aka.ms/VSCode-CS-LaunchJson-Console
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}